{
  "name": "node-todo-api",
  "version": "1.0.0",
  "description": "API to manage todo lists, built with Express",
  "main": "dist/app.js",
  "scripts": {
    "build": "babel src -d dist -x \".ts,.tsx\" -i types",
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "watch": "cross-env NODE_ENV=development concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch:ts": "tsc -w",
    "watch:node": "cross-env NODE_ENV=development nodemon dist/app.js",
    "test": "cross-env NODE_ENV=test jest --forceExit",
    "test:coverage": "cross-env NODE_ENV=test jest --forceExit --coverage",
    "test:watch": "cross-env NODE_ENV=test npm run test -- --watchAll",
    "debug": "npm run build && npm run debug-watch",
    "debug:watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "debug:serve": "nodemon --inspect dist/app.js",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "keywords": [
    "api",
    "todo list",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nip10/node-course-2-todo-api.git"
  },
  "author": "Diogo Cardoso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nip10/node-course-2-todo-api/issues"
  },
  "homepage": "https://github.com/nip10/node-course-2-todo-api#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "mongodb": "^3.1.1",
    "mongoose": "^5.3.15",
    "validator": "^10.9.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.24",
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/jest": "^23.3.1",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.119",
    "@types/mongoose": "^5.3.3",
    "@types/supertest": "^2.0.7",
    "@types/validator": "^9.4.3",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3",
    "supertest": "^3.3.0",
    "ts-jest": "^23.1.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1"
  },
  "jest": {
    "roots": [
      "src/tests"
    ]
  }
}
