{
  "name": "node-todo-api",
  "version": "1.0.0",
  "description": "API to manage todo lists, built with Express",
  "main": "dist/app.js",
  "scripts": {
    "build": "babel src -d dist",
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "watch": "cross-env NODE_ENV=development nodemon src/app.js --exec babel-node",
    "test": "cross-env NODE_ENV=test jest --env=node --coverage --forceExit --verbose",
    "test-watch": "cross-env NODE_ENV=test npm run test -- --watchAll",
    "debug": "cross-env NODE_ENV=development node dist/app.js",
    "debug-serve": "cross-env NODE_ENV=development nodemon --inspect src/app.js --exec babel-node",
    "lint": "eslint src/**"
  },
  "keywords": [
    "api",
    "todo list",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nip10/node-course-2-todo-api.git"
  },
  "author": "Diogo Cardoso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nip10/node-course-2-todo-api/issues"
  },
  "homepage": "https://github.com/nip10/node-course-2-todo-api#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "mongodb": "^3.1.1",
    "mongoose": "^5.2.7",
    "validator": "^9.4.1",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "jest": "^22.4.4",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0"
  },
  "jest": {
    "roots": [
      "src/tests"
    ]
  }
}