{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "no-console": "off",
    "no-underscore-dangle": "off",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 120
      }
    ]
  },
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": [
    "prettier"
  ],
  "overrides": [
    {
      "files": [
        "src/**/*.test.js"
      ],
      "env": {
        "node": true,
        "es6": true,
        "jest": true
      }
    }
  ]
}